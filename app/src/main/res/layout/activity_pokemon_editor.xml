<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.shubhraj.assetsdata.activities.PokemonEditorActivity">
    <ImageView
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:src="@drawable/electric_type_pokemon"
        android:padding="16dp"
        android:layout_height="200dp"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:hint="@string/pokemon_name"
            android:id="@+id/pokemon_name"
            android:inputType="textPersonName"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:hint="@string/pokemon_type"
            android:id="@+id/pokemon_type"
            android:inputType="textPersonName"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="300dp"
        android:layout_margin="8dp"
        android:id="@+id/editor_button"
        android:layout_gravity="center"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:text="@string/add_pokemon"
        android:layout_height="wrap_content" />
</LinearLayout>
